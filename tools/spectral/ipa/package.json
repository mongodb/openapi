{
  "name": "@mongodb-js/ipa-validation-ruleset",
  "version": "2.2.0",
  "description": "Custom validation rules for MongoDB API Standards (IPA).",
  "keywords": [
    "mongodb",
    "openapi",
    "spectral"
  ],
  "homepage": "https://github.com/mongodb/openapi/tree/main/tools/spectral/ipa#readme",
  "bugs": {
    "url": "https://github.com/mongodb/openapi/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mongodb/openapi.git"
  },
  "license": "Apache-2.0",
  "author": "MongoDB",
  "main": "ipa-spectral.yaml",
  "type": "module",
  "scripts" : {
    "gen-ipa-changelog" : "npx auto-changelog"
  },
  "dependencies": {
    "@stoplight/spectral-cli": "6.15.0",
    "@stoplight/spectral-core": "1.20.0",
    "@stoplight/spectral-functions": "1.10.1",
    "inflection": "3.0.2",
    "lodash": "^4.17.21"
  },
  "engineStrict": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "auto-changelog": "2.5.0"
  },
  "auto-changelog" : {
    "package": true,
    "commitPattern": "[a-z]+\\(ipa\\):",
    "startingVersion": "ipa-validation-ruleset-v1.0.0",
    "hideCredit": true,
    "tagPattern": "ipa-validation-ruleset-v\\d+\\.\\d+\\.\\d+",
    "tagPrefix": "ipa-validation-ruleset-v",
    "ignoreCommitPattern": "^ci.*$",
    "hideEmptyReleases" : true,
    "contributors": false
  }
}
