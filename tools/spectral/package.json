{
  "name": "ipa-validation-framework",
  "version": "1.0.0",
  "description": "Custom validation rules for MongoDB API Standards (IPA).",
  "keywords": [
    "mongodb",
    "openapi",
    "spectral"
  ],
  "homepage": "https://github.com/mongodb/openapi/main/tools/spectral#readme",
  "license": "Apache-2.0",
  "author": "MongoDB",
  "type": "module",
  "scripts": {
    "format": "npx prettier . --write",
    "format-check": "npx prettier . --check",
    "lint-js": "npx eslint .",
    "gen-ipa-docs": "node ipa/scripts/generateRulesetReadme.js",
    "gen-ipa-changelog" : "conventional-changelog -p angular -i CHANGELOG.md -s",
    "ipa-validation": "spectral lint $npm_config_file --ruleset=./ipa/ipa-spectral.yaml",
    "ipa-filter-violations": "node ipa/scripts/filter-ipa-violations.js",
    "spectral-validation": "spectral lint $npm_config_file --ruleset=./.spectral.yaml",
    "test": "jest",
    "precommit": "husky"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "__helpers__",
      "IPA\\d+ValidOperationID\\.test\\.js$"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.845.0",
    "@stoplight/spectral-cli": "^6.15.0",
    "@stoplight/spectral-core": "^1.20.0",
    "@stoplight/spectral-functions": "^1.10.1",
    "@stoplight/spectral-ref-resolver": "^1.0.5",
    "@stoplight/spectral-ruleset-bundler": "^1.6.3",
    "apache-arrow": "^21.0.0",
    "dotenv": "^17.2.0",
    "eslint-plugin-jest": "^29.0.1",
    "inflection": "^3.0.2",
    "markdown-table": "^3.0.4",
    "parquet-wasm": "^0.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/js": "^9.31.0",
    "@jest/globals": "^30.0.2",
    "@stoplight/types": "^14.1.1",
    "aws-sdk-client-mock": "^4.1.0",
    "babel-jest": "^30.0.2",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "brace-expansion": "4.0.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-require-extensions": "^0.1.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "lint-staged": "^16.1.2",
    "prettier": "3.6.2"
  },
  "engineStrict": false,
  "engines": {
    "node": ">=20.0.0"
  }
}
